<robot name="convery">
  <link name="block">
    <contact>
      <friction_anchor/>
      <lateral_friction value="1"/>
      <rolling_friction value="0.0.001"/> 
      <damping value="10"/>
    </contact>

    <inertial>
      <origin rpy="0 0 0" xyz="0.05 0.05 0.001"/>
       <mass value="0.02"/>
       <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>

    <visual>
      <origin xyz="0.05 0.05 0.001"/>
      <geometry>
        <box size="0.1 0.1 0.002" />
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0.05 0.05 0.001"/>
      <geometry>
        <box size="0.1 0.1 0.002" />
      </geometry>
    </collision>
  </link>

</robot>

